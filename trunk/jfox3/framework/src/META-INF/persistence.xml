<persistence>

    <persistence-unit name="default">
        <jta-data-source>java:/DefaultMySqlDS</jta-data-source>
        <properties>
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://localhost:3306/test"/>
            <property name="username" value="root"/>
            <property name="password" value="root"/>
            <property name="minSize" value="1"/> <!-- min pool size -->
            <property name="maxSize" value="200"/> <!-- max pool size -->
            <property name="lifeTime" value="1800000"/> <!-- 2h, connection max idle time -->
            <property name="sleepTime" value="600000"/>  <!--PoolKeeper sleep time -->
            <property name="deadLockRetryWait" value="2000"/> <!-- retry time if no free connection -->
            <property name="deadLockMaxWait" value="60000"/> <!-- max wait time if no free connection -->
            <property name="checkLevelObject" value="4"/> <!-- check connection closed -->
            <property name="cache.default.algorithm" value="LRU"/> <!-- JPA default Cache max size, LRU, LFU, FIFO-->
            <property name="cache.default.ttl" value="1000"/> <!-- JPA default Cache ttl, in seconds-->
            <property name="cache.default.maxIdleTime" value="1000000"/> <!-- JPA default Cache maxidletime, in seconds-->
            <property name="cache.default.maxSize" value="1000000"/> <!-- JPA default Cache max size-->
            <property name="cache.default.maxMemorySize" value="1000000"/> <!-- JPA default Cache max memory size, in bytes-->
        </properties>
    </persistence-unit>

    <persistence-unit name="JPetstoreMysqlDS">
        <jta-data-source>java:/JPetstoreMysqlDS</jta-data-source>
        <properties>
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://localhost:3306/jpetstore"/>
            <property name="username" value="root"/>
            <property name="password" value="root"/>
            <property name="minSize" value="5"/> <!-- min pool size -->
            <property name="maxSize" value="200"/> <!-- max pool size -->
            <property name="lifeTime" value="1800000"/> <!-- 2h, connection max idle time -->
            <property name="sleepTime" value="600000"/> <!-- PoolKeeper sleep time -->
            <property name="deadLockRetryWait" value="2000"/> <!-- retry time if no free connection -->
            <property name="deadLockMaxWait" value="60000"/> <!-- max wait time if no free connection -->
            <property name="checkLevelObject" value="4"/>
            <property name="cache.default.ttl" value="1000"/> <!-- JPA default Cache ttl-->
            <property name="cache.default.maxidletime" value="1000000"/> <!-- JPA default Cache maxidletime-->
        </properties>
    </persistence-unit>

    <persistence-unit name="DefaultHsqlDS">
        <jta-data-source>java:/DefaultHsqlDS</jta-data-source>
        <properties>
            <property name="driver" value="com.mysql.jdbc.Driver"/>
            <property name="url" value="jdbc:mysql://localhost:3306/test"/>
            <property name="username" value="root"/>
            <property name="password" value="root"/>
        </properties>
    </persistence-unit>
    
</persistence>