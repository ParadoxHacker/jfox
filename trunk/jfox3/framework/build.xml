<project basedir="." default="all" name="Geronimo">

    <property name="appname" value="geronimo"/>
    <property name="src" value="${basedir}/src"/>
    <property name="conf" value="${basedir}/conf"/>
    <property name="wwwroot" value="${basedir}/wwwroot"/>
    <property name="lib" value="${basedir}/lib"/>
    <property name="dist" value="${basedir}/dist"/>
    <property name="wwwoutput" value="${dist}/${appname}"/>
    <property name="web-classes" value="${wwwoutput}/WEB-INF/classes"/>
    <property name="web-lib" value="${wwwoutput}/WEB-INF/lib"/>

    <property name="jarname" value="${appname}-3.0.jar"/>
    <property name="warname" value="${appname}.war"/>

    <path id="classpath">
        <fileset dir="${lib}">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <patternset id="ignored.files">
        <exclude name="**/.svn/**"/>
    </patternset>

    <target name="init" depends="clean">
        <mkdir dir="${web-classes}"/>
    </target>

    <target name="compile" depends="init">
        <javac encoding="UTF-8" source="1.5" target="1.5" destdir="${web-classes}" debug="on" deprecation="on" optimize="off">
            <src path="${src}"/>
            <classpath refid="classpath"/>
            <patternset refid="ignored.files"/>
        </javac>
        <copy todir="${web-classes}" description="config file">
            <fileset dir="${conf}">
                <patternset refid="ignored.files"/>
            </fileset>
        </copy>
        <copy todir="${wwwoutput}" description="www resource">
            <fileset dir="${wwwroot}">
                <patternset refid="ignored.files"/>
            </fileset>
        </copy>
        <copy todir="${web-lib}" flatten="true" description="copy libs">
            <fileset dir="${lib}">
                <patternset refid="ignored.files"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="war" depends="compile">
        <jar destfile="${web-lib}/${jarname}">
            <fileset dir="${web-classes}"/>
        </jar>
        <delete dir="${web-classes}"/>
        <jar destfile="${dist}/${warname}">
            <fileset dir="${wwwoutput}"/>
        </jar>
    </target>

    <target name="all" depends="war">

    </target>

    <target name="clean">
        <delete dir="${dist}"/>
    </target>
</project>